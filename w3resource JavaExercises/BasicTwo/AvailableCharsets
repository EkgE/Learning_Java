import java.nio.charset.Charset; //Service-provider classes for the java.nio.charset package
//Defines charsets, decoders, and encoders, for translating between bytes and Unicode characters.
public class AvailableCharsets {
    public static void main(String[] args) {
        System.out.println("List of available character sets: ");
        for (String str : Charset.availableCharsets().keySet()) {
            //availableCharsets: Constructs a sorted map from canonical charset names to charset objects.
            //keySet() method returns a set containing keys of the specified map.
            System.out.println(str);
        }
    }
}
