import java.io.File;
import java.util.Scanner;

public class FileSize {
    public static void main(String[] args){
        Scanner scanner = new Scanner(System.in);
        System.out.print("Enter file pathway: ");
        String pathwayFile = scanner.next();
        System.out.printf("Your file name is: %s ", new File(pathwayFile).getName());
        System.out.printf("\nYour file size is: %s ",new File(pathwayFile).length());

    }
}
